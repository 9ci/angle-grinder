#!/bin/bash

source ./bin/lib/server
source ./bin/lib/selenium

./bin/xvfb start
startServer
startSelenium

grunt build:dev
grunt configureProxies connect:integration watch &
PID=$!

function isRunning() {
  nc -vz localhost 9001 &> /dev/null
}

echo -n "Waiting for the frontend server."
while ! isRunning; do
  echo -n "."
  sleep 0.1
done

echo -e "\nRunning integration specs."

./node_modules/protractor/bin/protractor ./build/tests/protractor-conf.js

stopServer
stopSelenium
./bin/xvfb stop

echo "Killing the frontend server PID=$PID"
kill "$PID"
